{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block content %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ reservation.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reservation.email }}</td>
            </tr>
            <tr>
                <th>date du rendu	</th>
                <td>{{ reservation.rendered ? reservation.rendered|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>date de prêt</th>
                <td>{{ reservation.loandate ? reservation.loandate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Rendu</th>
                <td>{{ reservation.isrenderd ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>
      {{ include('reservation/_delete_form.html.twig') }}
    <a <button class="btn btn-secondary" href="{{ path('app_reservation_index') }}">retour à la liste</a> </button>
    <a <button class="btn btn-primary" href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">Éditer</a> </button>
{% endblock %}
