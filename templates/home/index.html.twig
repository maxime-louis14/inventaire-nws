{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <h1>Inventaire nws</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Email</th>
                <th scope="col">Matérial</th>
                <th scope="col">date de prêt</th>
                <th scope="col">date du rendu</th>       
                <th scope="col">Mail</th>            
            </tr>
        </thead>
        <tbody>
        {% for enfant in enfants %}
            <tr>
                <td>{{ enfant.email }}</td>
                <td>{{ enfant.product.name }}</td> 
                <td>{{ enfant.loandate  ? enfant.loandate|date('d-m-Y H:i:s') : ''}}</td>
                <td>{{ enfant.rendered ? enfant.rendered|date('d-m-Y H:i:s') : ''}}</td>
                <td>{{ include('home/sendMailer.html.twig') }}</td>                        
            </tr>      
        {% endfor %}
        </tbody>
    </table>





{% endblock %}