{% extends 'base.html.twig' %}

{% block title %}Materiel index{% endblock %}

{% block content %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 15px  00px; width: 855px; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Materiel</h1>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Nom</th>
                <th>Quantité</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for materiel in materiels %}
            <tr>
                {# <td>{{ materiel.id }}</td> #}
                <td>{{ materiel.name }}</td>
                <td>{{ materiel.quantity }}</td>
                <td>
                    <a <button type="button" class="btn btn-secondary" href="{{ path('app_materiel_show', {'id': materiel.id}) }}">Afficher</a> </button>
                    <a <button type="button" class="btn btn-primary" href="{{ path('app_materiel_edit', {'id': materiel.id}) }}">Éditer</a>   </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a <button type="button" class="btn btn-primary" href="{{ path('app_materiel_new') }}">Ajoutez un nouveau matériel</a> </button>
</div>
{% endblock %}
